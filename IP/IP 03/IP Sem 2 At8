//Usando repita-até

<inicio>
	//Declaração das variáveis
	real:totalA,totalD,totalF;
	
	//Leitura de dados
	imprime:("Qual o numero que deve ser multiplicado?");
	leia:(totalA);
	imprime:("Qual o outro numero que deve ser multiplicado?");
	leia:(totalD);
	
	//Processamento de dados
	
	Repita 
		totalF = totalA * totalD
		imprime:("O resultado é" + totalF + ".(Insira outro numero diferente de zero para continuar a multiplicação)");
		leia:(totalA);
		totalD = totalF	
	Até totalA ou totalD != 0
<Fim>




//Usando para

<inicio>
	//Declaração das variáveis
	real:totalA,totalD,totalF;
	
	//Processamento de dados

	Para totalA ou totalD de 1 até != 0
		imprime:("Qual o numero que deve ser multiplicado?");
		leia:(totalA);
		imprime:("Qual o outro numero que deve ser multiplicado?");
		leia:(totalD);
	
		totalF = totalA * totalD
		imprime:("O resultado é" + totalF + ".(Insira outro numero diferente de zero para continuar a multiplicação)");
		leia:(totalA);
		totalD = totalF	
	Fim para
<Fim>