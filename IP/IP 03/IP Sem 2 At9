//Usando repita-até

<inicio>
	//Declaração das variáveis
	real:X,Y,Z;
	
	//Leitura de dados
	imprime:("Qual o numero que deve ser dividido?");
	leia:(X);

	//Processamento de dados
	Z = 1 
	Repita
		Y = X MOD Z
		Se Y == 0 então 
			imprime:(Z + "é um divisor de" + X);
		Fim se
		Z = Z + 1
	Até  Z != X 
<Fim>




//Usando para

<inicio>
	//Declaração das variáveis
	real:X,Y,Z;
	
	//Leitura de dados
	imprime:("Qual o numero que deve ser dividido?");
	leia:(X);

	//Processamento de dados
	Para Z de 1 até X
		Y = X MOD Z
		Se Y == 0 então 
			imprime:(Z + "é um divisor de" + X);
		Fim se
	Fim para
<Fim>